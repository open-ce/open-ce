From: ArchanaSinde1 <archana.shinde2504@gmail.com>
Date: Tue, 11 Apr 2023 07:35:12 +0000
Subject: [PATCH] pin dependencies

---
 recipe/meta.yaml | 29 ++++++++++++++++-------------
 1 file changed, 16 insertions(+), 13 deletions(-)

diff --git a/recipe/meta.yaml b/recipe/meta.yaml
index 490cbb8..1dbe857 100644
--- a/recipe/meta.yaml
+++ b/recipe/meta.yaml
@@ -32,9 +32,9 @@ outputs:
         - pkg-config
       host:
         # eigen does not have a run-export but is header-only
-        - eigen
-        - libabseil
-        - libprotobuf
+        - eigen {{ eigen }}
+        - abseil-cpp {{ abseil_cpp }}
+        - libprotobuf {{ libprotobuf }}
         - re2
         - zlib
         # coin or deps
@@ -47,6 +47,8 @@ outputs:
         # fake python dependency to avoid conda-smithy collapsing the builds per arch;
         # we can remove this once we manage to base the python bindings on libortools
         - python
+      run:
+        - openblas {{ openblas }}
       run_constrained:
         # make sure we don't co-install with old version of previous package name
         - ortools-cpp ={{ version }}
@@ -88,21 +90,21 @@ outputs:
         - python
         - mypy-protobuf
         - pkg-config
-        - setuptools
+        - setuptools {{ setuptools }}
         - swig >=4.0
       host:
         - python
         - pip
         - absl-py >=0.13
-        - numpy
+        - numpy {{ numpy }}
         - mypy-protobuf
-        - protobuf >=4.21.12
-        - scipy >=1.10
+        - protobuf {{ protobuf }}
+        - scipy {{ scipy }}
         - wheel
         # C/C++ deps
-        - eigen
-        - libabseil
-        - libprotobuf
+        - eigen {{ eigen }}
+        - abseil-cpp {{ abseil_cpp }}
+        - libprotobuf {{ libprotobuf }}
         - pybind11
         - re2
         - zlib
@@ -116,9 +118,10 @@ outputs:
         - python
         - absl-py >=0.13
         - mypy-protobuf
-        - {{ pin_compatible('numpy') }}
-        - protobuf >=4.21.12
-        - scipy >=1.10
+        - numpy {{ numpy }}
+        - protobuf {{ protobuf }}
+        - scipy {{ scipy }}
+        - openblas {{ openblas }}
         # Source: https://github.com/google/or-tools/blob/stable/ortools/python/setup.py.in#L44
 
     test:

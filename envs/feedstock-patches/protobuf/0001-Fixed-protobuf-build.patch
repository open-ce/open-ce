index 5389f6a..94953e6 100644
--- a/recipe/meta.yaml
+++ b/recipe/meta.yaml
@@ -33,7 +33,7 @@ requirements:
     - {{ compiler('cxx') }}
   host:
     - python
-    - pip
+    - pip 23.*
     - libprotobuf {{ lib_major + "." + version }}         # [unix]
     - libprotobuf-static {{ lib_major + "." + version }}  # [win]
   run:

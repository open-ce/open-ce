diff --git a/recipe/meta.yaml b/recipe/meta.yaml
index 1b76b0f..26dafd5 100644
--- a/recipe/meta.yaml
+++ b/recipe/meta.yaml
@@ -11,24 +11,25 @@ source:
 build:
   number: 0
   skip: true  # [py<37 or win32]
-  script: {{ PYTHON }} -m pip install . -vv --no-deps
+  string: fips_h{{ PKG_HASH }}_{{ PKG_BUILDNUM }}
